# OpenAI-Optimized Development Environment

# Database (Local Docker)
DATABASE_URL="postgresql://postgres:password@localhost:5432/legallens?schema=public"

# Redis (Local Docker)
REDIS_URL="redis://localhost:6379"

# Storage (Local MinIO - FREE)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="legal-lens"
S3_REGION="us-east-1"
S3_USE_PATH_STYLE="true"

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-change-in-production-abc123xyz789"
JWT_SECRET="dev-jwt-secret-change-in-production-987zyx321cba"

# OpenAI Configuration (COST-OPTIMIZED)
OPENAI_API_KEY="your-openai-api-key-here"
LLM_PROVIDER="openai"

# Use GPT-3.5-Turbo for development (much cheaper than GPT-4)
OPENAI_MODEL="gpt-3.5-turbo"  # ~$0.002/1K tokens vs GPT-4 ~$0.03/1K
# OPENAI_MODEL="gpt-4-turbo-preview"  # Use for production/testing only

# Cost control settings
OPENAI_MAX_TOKENS=1000        # Limit response length
OPENAI_TEMPERATURE=0.1        # Low temperature for consistent results
ENABLE_RESPONSE_CACHING=true  # Cache identical requests
MAX_DAILY_API_CALLS=100       # Safety limit for development

# OCR - FREE options
OCR_PROVIDER="tesseract"      # Free, local processing
# OCR_PROVIDER="google-vision"  # Enable when you need better quality

# Optional: Google Vision for high-quality OCR (1000 requests/month free)
# GOOGLE_VISION_API_KEY=""

# OAuth (Optional - FREE)
GITHUB_ID=""
GITHUB_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe (Test mode - FREE)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_test_..."

# Application Settings
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Security
ENCRYPTION_KEY="dev-encryption-key-32-characters"

# Feature Flags
ENABLE_SOLO_MODE="true"
ENABLE_TEAM_MODE="true"
ENABLE_SSO="false"

# Development optimizations
USE_LOCAL_STORAGE="true"       # Use disk instead of S3 uploads
SKIP_VIRUS_SCAN="true"         # Skip ClamAV in development
ENABLE_DEBUG_LOGS="true"       # Detailed logging
CACHE_LLM_RESPONSES="true"     # Cache to avoid duplicate API calls

# Cost monitoring
ENABLE_USAGE_TRACKING="true"   # Track API usage
DAILY_SPENDING_LIMIT="5.00"    # Alert at $5/day spending