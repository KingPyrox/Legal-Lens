# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/legallens?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Storage (MinIO/S3)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="legal-lens"
S3_REGION="us-east-1"

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_ID=""
GITHUB_SECRET=""

# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# LLM Provider
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4-turbo-preview"

# OCR Provider
OCR_PROVIDER="tesseract" # tesseract | google-vision | aws-textract | azure
GOOGLE_VISION_API_KEY=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AZURE_COMPUTER_VISION_KEY=""
AZURE_COMPUTER_VISION_ENDPOINT=""

# Application
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Security
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-32-char-encryption-key-here"

# Feature Flags
ENABLE_SOLO_MODE="true"
ENABLE_TEAM_MODE="true"
ENABLE_SSO="false"