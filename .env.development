# Development Environment - FREE/LOW-COST SETUP

# Database (Local Docker)
DATABASE_URL="postgresql://postgres:password@localhost:5432/legallens?schema=public"

# Redis (Local Docker)
REDIS_URL="redis://localhost:6379"

# Storage (Local MinIO - FREE)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="legal-lens"
S3_REGION="us-east-1"
S3_USE_PATH_STYLE="true"

# Auth (No external providers needed initially)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-change-in-production-abc123xyz789"
JWT_SECRET="dev-jwt-secret-change-in-production-987zyx321cba"

# OAuth (Optional - all FREE)
# GitHub OAuth (FREE) - https://github.com/settings/developers
GITHUB_ID=""
GITHUB_SECRET=""

# Google OAuth (FREE) - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# LLM Options (Choose one):

# Option 1: OpenAI API (You need an API key - different from ChatGPT Pro)
# Get from: https://platform.openai.com/api-keys
# Note: ChatGPT Pro subscription doesn't include API access
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"  # Cheaper than GPT-4

# Option 2: Groq (FREE - Fast inference)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=""
LLM_PROVIDER="groq"
GROQ_MODEL="mixtral-8x7b-32768"

# Option 3: Local Ollama (FREE - Runs on your machine)
# Install from: https://ollama.ai/
OLLAMA_BASE_URL="http://localhost:11434"
LLM_PROVIDER="ollama"
OLLAMA_MODEL="llama2"  # or mistral, phi, etc.

# OCR Options (All FREE):

# Option 1: Tesseract.js (DEFAULT - FREE, runs in browser/node)
OCR_PROVIDER="tesseract"

# Option 2: Google Vision (FREE tier - 1000 requests/month)
# Enable at: https://console.cloud.google.com/apis/library/vision.googleapis.com
# GOOGLE_VISION_API_KEY=""
# OCR_PROVIDER="google-vision"

# Billing/Payments

# Stripe TEST Mode (FREE for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_test_..."
BILLING_MODE="test"

# Application Settings
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Security (Generate random strings for production)
ENCRYPTION_KEY="dev-encryption-key-32-characters"

# Feature Flags
ENABLE_SOLO_MODE="true"
ENABLE_TEAM_MODE="true"
ENABLE_SSO="false"  # Keep false to avoid complexity
ENABLE_MOCK_AI="true"  # Use mock responses when no API key

# Development Features
USE_MOCK_STRIPE="true"  # Mock payments in development
USE_LOCAL_STORAGE="true"  # Use local disk instead of S3
SKIP_VIRUS_SCAN="true"  # Skip ClamAV in development
ENABLE_DEBUG_LOGS="true"