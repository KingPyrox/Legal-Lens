FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY ../../package*.json ../../
COPY ../../packages/database/package*.json ../../packages/database/

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .
COPY ../../packages ../../packages

# Generate Prisma client
RUN cd ../../packages/database && npx prisma generate

EXPOSE 3001

CMD ["npm", "run", "dev"]